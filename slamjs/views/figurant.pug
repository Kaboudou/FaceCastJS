extends layout

block content

    div(id='main')
      div(class='inner')

        header(id='header')
          h1= title       

        section(id='banner')
          div(class='content')
            header
              h2='Figurant'
            ul
              each figurant, i in figurantlist
                table
                  th Nom
                  th Date
                  th Demande
                  th Supprimer
                  tr
                  td=figurant.nom
                  td=figurant.date
                  td=figurant.demande
                  td
                    form#DeleteFig(name="delete", action="/figurant/delete/"+figurant._id, method="post")
                      input(type="hidden",name="_method", value="DELETE")
                      button#btnSubmit1(type="submit") Supprimer
                
              h4="Ajout figurant"
            form#formAddFig(name="addfig",method="post", action="/figurant/addfig")
              input#inputFigName(type="text", placeholder="nom", name="nom")
            
              input#inputFigDate(type="date", placeholder="birthday",name="date")
            
              input#inputFigDem(type="text", placeholder="demande",name="demande")
            
              button#btnSubmit(type="submit") submit
    